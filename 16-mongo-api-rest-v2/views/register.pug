extends layout

block content
  h1= title
  p Bienvenido a  #{title}
  include includes/menu.pug
  div 
    div(id="mensajes")
    form(class="needs-validation",method="post",action="",id="register",novalidate)
        div(class="form-group")
            label(for="nombre2") Nombre y Apellidos
            input(class="form-control",id="nombre2",name="nombre",type="text",value="",placeholder="Nombre y Apellidos",required, minlength=6)
            div(class="valid-feedback") Válido
            div(class="invalid-feedback") Incorrecto
           
        div(class="form-group")
            label(for="nombre") nombre 
            input(class="form-control",id="nombre",name="nombre",type="text",value="",placeholder="nombre de usuario",required, minlength=6)
            div(class="valid-feedback") Válido
            div(class="invalid-feedback") Incorrecto
        
        div(class="form-group")
            label(for="email") Email
            input(class="form-control",id="email",name="email",type="text",value="",placeholder="Email",required, minlength=8)
            div(class="valid-feedback")  Válido
            div(class="invalid-feedback") Incorrecto
            
        div(class="form-group")
            label(for="comunidad") Provincia
            select(id="country" name="country")
                option(value="madrid") Madrid
                option(value="salamanca") Salamanca
                option(value="granada") Granada
                
        div(class="form-group")
            label(for="pass") password
            input(class="form-control",id="pass",name="pass",type="password",value="",placeholder="Contraseña",required, minlength=8)
            div(class="valid-feedback")  Válido
            div(class="invalid-feedback") Incorrecto
            
        div(class="form-group")
            label(for="pass2") password
            input(class="form-control",id="pass2",name="pass2",type="password",value="",placeholder="Repitir Contraseña",required,minlength=8)
            div(class="valid-feedback")  Válido
            div(class="invalid-feedback") Incorrecto
        div(class="form-group")
            input(class="form-control btn btn-primary",type="submit",value="Enviar")
            
        